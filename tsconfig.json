{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "strict": true,
    "useDefineForClassFields": true,
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "jsx": "react-native", 
    "lib": ["es6"],
    "moduleResolution": "node",
    "noEmit": true,
    "target": "esnext",
    "experimentalDecorators" : true,
    "baseUrl": ".",
    "paths": {
      "app/*" : ["./app/*"],
    }
  },
  "exclude": [
    "node_modules",
    "babel.config.js",
    "metro.config.js",
    "jest.config.js"
  ]
}
